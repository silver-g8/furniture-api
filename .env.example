# ========================================
# Roiet Backend API Environment Variables
# ========================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Generate application key:
#    php artisan key:generate
#
# 3. Configure database and other settings
#
# 4. Run migrations:
#    php artisan migrate --seed
#
# ========================================

APP_NAME=RoietFurniture
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# Application URL
# Local (Herd): http://furniture-api.test
# Local (Serve): http://localhost:8000
# Production: https://imageapi.sg8net.com
APP_URL=http://furniture-api.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Recommended: MariaDB or MySQL
DB_CONNECTION=mariadb
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=furnitureapi
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
# Audit Configuration
AUDIT_QUEUE=false


CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ========================================
# CORS & Sanctum Configuration (IMPORTANT!)
# ========================================

# Allowed origins for CORS (comma-separated)
# Local: http://localhost:9000,http://127.0.0.1:9000
# Production: https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:9000,http://127.0.0.1:9000

# Sanctum Stateful Domains (comma-separated, include port if not 80/443)
# Local: localhost:9000,127.0.0.1:9000
# Production: your-frontend-domain.com
SANCTUM_STATEFUL_DOMAINS=localhost:9000,127.0.0.1:9000

# Session domain for cookies
# Local: localhost or .test
# Production: .your-domain.com
SESSION_DOMAIN=localhost

# Sanctum token expiration (minutes)
SANCTUM_EXPIRATION=120
